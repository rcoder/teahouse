{
    "compilerOptions": {
        "module": "es2020",
        "target": "es2020",
        "lib": ["dom", "es2020"],
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "baseUrl": "./src",
        "typeRoots": ["./src"],
        "noEmit": true,
        "forceConsistentCasingInFileNames": true
    },
    "files": [
        "src/index.ts"
    ]
}
